<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GetStarted">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/interregular"
        android:text="Let's Get Started"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/login_option_btn_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageButton
            android:backgroundTint="#4267b2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:src="@drawable/img"
            android:background="@drawable/rounded_btns"

            style="@style/rounded_btns"
            ></ImageButton>

        <ImageButton
            android:layout_marginTop="10dp"
            android:backgroundTint="#1da1f2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:src="@drawable/img_1"
            android:background="@drawable/rounded_btns"
            style="@style/rounded_btns"
            ></ImageButton>

        <ImageButton
            android:layout_marginTop="10dp"
            android:backgroundTint="#ea4335"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:src="@drawable/img_6"
            android:background="@drawable/rounded_btns"
            style="@style/rounded_btns"
            ></ImageButton>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:background="@drawable/create_account_btn"
            app:backgroundTint="@color/white"
            android:id="@+id/have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/interlight"
            android:text="Already have an account?"
            android:textColor="#a4a8b0"
            android:textSize="15dp"></Button>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/create_account_btn"
        android:fontFamily="@font/intermedium"
        android:text="Create an Account"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:backgroundTint="#3d93f8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>