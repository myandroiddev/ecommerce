<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d93f8"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/getstarted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/get_started_background"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look Good, Feel Good"
            android:fontFamily="@font/intersemibold"
            android:textColor="@color/black"
            android:textSize="25dp"
            ></TextView>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interregular"
            android:textSize="15dp"
            android:textColor="#bfc2c8"
            android:text="Create your individual and unique style and look amazing everyday."></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men"
                android:layout_weight="1"
                android:fontFamily="@font/intermedium"
                android:textSize="17dp"
                android:background="@drawable/create_account_btn"
                app:backgroundTint="@color/white"
                android:textColor="#8f959e"></Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women"
                android:layout_weight="1"
                android:fontFamily="@font/intermedium"
                android:textSize="17dp"
                android:background="@drawable/custom_btn"
                app:backgroundTint="#3d93f8"
                android:textColor="@color/white"></Button>

        </LinearLayout>

        <Button
            android:id="@+id/get_started"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/create_account_btn"
            android:text="Get started"
            android:fontFamily="@font/intermedium"
            android:textSize="17dp"
            app:backgroundTint="@color/white"
            android:textColor="#8f959e"></Button>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>